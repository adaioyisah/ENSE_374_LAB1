

<!-- Displays the Note-Vote page, listing all posts. -->

<!-- noteVote.ejs -->
<%- include("layouts/partials/header") %>
<h1>Welcome to Note-Vote, <%= username %>!</h1>

<div class="posts">
    <% posts.forEach(post => { %>
        <%- include("layouts/partials/post", { post: post, username: username }) %>
    <% }); %>
</div>

<div class="add-note">
    <form action="/add-post" method="POST">
        <input type="hidden" name="username" value="<%= username %>">
        <input type="text" name="text" placeholder="Enter a new note here" required>
        <button class="btn btn-primary">Add Post</button>
    </form>
</div>

<%- include("layouts/partials/footer") %>
